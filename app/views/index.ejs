<html>

<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
	<div class="container my-3">
		<div class="row">
			<div class="col h1"> TP - Genie Logiciel</div>
		</div>
		<hr>
		<div class="row">
			<div class="col-3">
				<input class="form-control" id="add1">
			</div>
			<div class="col-1">
				<div class="w-100 text-center">
					+
				</div>
			</div>
			<div class="col-3">
				<input class="form-control" id="add2">
			</div>
			<div class="col-2">
				<button type="button" class="btn btn-primary w-100" onclick="add()">ADD</button>
			</div>
			<div class="col-3">
				<span class="h2" id="addres"></span>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col-3">
				<input class="form-control" id="sub1">
			</div>
			<div class="col-1">
				<div class="w-100 text-center">
					-
				</div>
			</div>
			<div class="col-3">
				<input class="form-control" id="sub2">
			</div>
			<div class="col-2">
				<button type="button" class="btn btn-primary w-100" onclick="subtract()">SUB</button>
			</div>
			<div class="col-3">
				<span class="h2" id="subres"></span>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col-3">
				<input class="form-control" id="mul1">
			</div>
			<div class="col-1">
				<div class="w-100 text-center">
					*
				</div>
			</div>
			<div class="col-3">
				<input class="form-control" id="mul2">
			</div>
			<div class="col-2">
				<button type="button" class="btn btn-primary w-100" onclick="multiply()">MUL</button>
			</div>
			<div class="col-3">
				<span class="h2" id="mulres"></span>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col-3">
				<input class="form-control" id="div1">
			</div>
			<div class="col-1">
				<div class="w-100 text-center">
					/
				</div>
			</div>
			<div class="col-3">
				<input class="form-control" id="div2">
			</div>
			<div class="col-2">
				<button type="button" class="btn btn-primary w-100" onclick="divide()">DIV</button>
			</div>
			<div class="col-3">
				<span class="h2" id="divres"></span>
			</div>
		</div>

	</div>

</body>
<script>
	function add() {
		var x = document.getElementById('add1').value
		var y = document.getElementById('add2').value
		var res = document.getElementById('addres')
		var params = {
			"num1": x,
			"num2": y
		}
		let xhr = new XMLHttpRequest()
		xhr.open('POST', '/add', true)
		xhr.onreadystatechange = function () {
			if (xhr.readyState === 4 && xhr.status === 200) {
				res.innerHTML = xhr.responseText
			}
		};
		xhr.setRequestHeader("Content-type", "application/json; charset=utf-8");
		xhr.send(JSON.stringify(params))
	}
	function subtract() {
		var x = document.getElementById('sub1').value
		var y = document.getElementById('sub2').value
		var res = document.getElementById('subres')
		var params = {
			"num1": x,
			"num2": y
		}
		let xhr = new XMLHttpRequest()
		xhr.open('POST', '/sub', true)
