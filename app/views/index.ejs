			}
		};
		xhr.setRequestHeader("Content-type", "application/json; charset=utf-8");
		xhr.send(JSON.stringify(params))
	}
	function multiply() {
		var x = document.getElementById('mul1').value
		var y = document.getElementById('mul2').value
		var res = document.getElementById('mulres')
		var params = {
			"num1": x,
			"num2": y
		}
		let xhr = new XMLHttpRequest()
		xhr.open('POST', '/mul', true)
		xhr.onreadystatechange = function () {
			if (xhr.readyState === 4 && xhr.status === 200) {
				res.innerHTML = xhr.responseText
			}
		};
		xhr.setRequestHeader("Content-type", "application/json; charset=utf-8");
		xhr.send(JSON.stringify(params))
	}
	function divide() {
		var x = document.getElementById('div1').value
		var y = document.getElementById('div2').value
		var res = document.getElementById('divres')
		var params = {
			"num1": x,
			"num2": y
		}
		let xhr = new XMLHttpRequest()
		xhr.open('POST', '/div', true)
		xhr.onreadystatechange = function () {
			if (xhr.readyState === 4 && xhr.status === 200) {
				res.innerHTML = xhr.responseText
			}
		};
		xhr.setRequestHeader("Content-type", "application/json; charset=utf-8");
		xhr.send(JSON.stringify(params))
	}
</script>
